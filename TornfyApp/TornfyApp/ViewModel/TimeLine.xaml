<?xml version="1.0" encoding="utf-8" ?><ContentPage xmlns="http://xamarin.com/schemas/2014/forms"             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"                         x:Class="TornfyApp.ViewModel.TimeLine" >        <ContentPage.ToolbarItems>                         <ToolbarItem Order="Primary"                     Text="Adicionar"                     Priority="1"                     Clicked="ToolbarItem_Clicked_1" />    </ContentPage.ToolbarItems>    <Grid>        <Grid.RowDefinitions>            <RowDefinition Height="120" />            <RowDefinition />        </Grid.RowDefinitions>         <CollectionView Grid.Row="0" x:Name="carroucel_days" Margin="20,10,0,0"                            SelectionChanged="carroucel_days_SelectionChanged"                    SelectionMode="Single"                 ItemsLayout="HorizontalList">            <CollectionView.ItemTemplate>                <DataTemplate>                    <StackLayout>                        <Frame HasShadow="False"  CornerRadius="33"                                     BackgroundColor="#fff" BorderColor="Black"                                      Margin="0,0,10,0" HeightRequest="26" WidthRequest="26" HorizontalOptions="Center"                                     VerticalOptions="CenterAndExpand">                            <StackLayout Orientation="Vertical">                                    <Image Source="{Binding Image}" Margin="0,0,0,0" HorizontalOptions="CenterAndExpand" WidthRequest="100"/>                            </StackLayout>                        </Frame>                                                                       <Label FontFamily="calibri" HorizontalOptions="Center" FontSize="10"                                             Margin="0,0,10,10" TextTransform="Uppercase" FontAttributes="Bold"                                            Text="{Binding Name}" TextColor="Black">                        </Label>                    </StackLayout>                </DataTemplate>            </CollectionView.ItemTemplate>        </CollectionView>               <ScrollView Grid.Row="1" BackgroundColor="#e8ebef">            <StackLayout>                              <ListView x:Name="carroucel_feed"                   ItemTapped="carroucel_feed_ItemTapped"                   ItemSelected="carroucel_feed_ItemSelected"                          ItemAppearing="carroucel_feed_ItemAppearing"                  HasUnevenRows="True"              SeparatorVisibility="None"              BackgroundColor="Transparent"                IsPullToRefreshEnabled = "True"                RefreshCommand="{Binding RefreshCommand}"               IsRefreshing="{Binding IsRefreshing}" >                    <ListView.ItemTemplate>                        <DataTemplate>                            <ViewCell>                                <Frame Margin="20, 10, 20, 10" Padding="20"  HasShadow="False" CornerRadius="5" >                                    <StackLayout>                                        <!-- Linha 1 -->                                        <Grid>                                            <Grid.ColumnDefinitions>                                                <ColumnDefinition Width="Auto" />                                                <ColumnDefinition Width="*" />                                                <ColumnDefinition Width="Auto" />                                            </Grid.ColumnDefinitions>                                            <Frame Grid.Column="0"                                                 WidthRequest="50"                                                 HeightRequest="50"                                                 Padding="0"                                                 CornerRadius="25"                                                 HasShadow="False">                                                <Image Source="{Binding path_jogador}"                                                 WidthRequest="50"                                                 HeightRequest="50"                                                 Aspect="AspectFill" />                                                                                             </Frame>                                        <StackLayout Grid.Column="1" VerticalOptions="Center">                                             <Label Text="{Binding nome_jogador}"                                                 FontSize="16" Padding="5,0,0,0"                                                FontAttributes="Bold" />                                             <Label FontSize="12" Padding="5,0,0,0"                                                       FontAttributes="Italic">                                                    <Label.FormattedText>                                                        <FormattedString>                                                            <Span Text="{Binding data}" />                                                            <Span Text=" (" />                                                            <Span Text="{Binding timeDisplay}" />                                                                                                                        <Span Text=")" />                                                        </FormattedString>                                                    </Label.FormattedText>                                             </Label>                                            </StackLayout>                                            <Image Grid.Column="2"                                                Source="menu_dots.png"                                                Opacity="0.7"                                                WidthRequest="24"                                                HeightRequest="24"                                                VerticalOptions="Center">                                                <Image.GestureRecognizers>                                                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped_3" />                                                </Image.GestureRecognizers>                                            </Image>                                        </Grid>                                        <!-- Linha 2 -->                                        <!--<mr:Label FontSize="14" x:Name="PostDescriptionLabel"                                                  LineBreakMode="WordWrap" Text="{Binding conteudo}"                                                  Margin="0,10,0,10"                                                  LongPressed="LongPressHandler"                                                  Tapped="TapGestureRecognizer_Tapped"                                              LongPressed="LongPressHandler"                                             Tapped="TapGestureRecognizer_Tapped"/>-->                                       <Label                                              LineBreakMode="WordWrap"                                             Text="{Binding conteudo_resumido}"                                             FontSize="14"                                             Margin="0,10,0,10">                                            <Label.GestureRecognizers>                                                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>                                            </Label.GestureRecognizers>                                        </Label>                                                                                                                                 <WebView HeightRequest="200"                                            WidthRequest="200"                                            IsVisible="{Binding IsWebViewVisible}"                                            Source="{Binding IframeSource}" />                                                                               <!-- Linha 3 -->                                        <Image Source="{Binding uploadPath}"                                                VerticalOptions="FillAndExpand" IsVisible="{Binding IsLabelVisible}"                                                HeightRequest="{Binding altura}" Aspect="AspectFit" >                                            <Image.GestureRecognizers>                                                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped_1" />                                            </Image.GestureRecognizers>                                        </Image>                                                                                               <Grid Margin="0,10,0,0">                                            <Grid.ColumnDefinitions>                                                <ColumnDefinition Width="*" />                                                <ColumnDefinition Width="*" />                                                <ColumnDefinition Width="Auto" />                                            </Grid.ColumnDefinitions>                                            <StackLayout Grid.Column="0" Orientation="Horizontal" HorizontalOptions="Start">                                                <Image Source="{Binding img_like}" x:Name="img_like"                                                 WidthRequest="24"                                                 HeightRequest="24"                                                 VerticalOptions="Center" >                                                    <Image.GestureRecognizers>                                                        <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped_2" />                                                    </Image.GestureRecognizers>                                                </Image>                                                <Label Text="{Binding likes, StringFormat='{0} curtiram'}"                                                                 FontSize="14"                                                 VerticalOptions="Center"                                                 Margin="5,0,0,0">                                                    <Label.GestureRecognizers>                                                        <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped_2" />                                                    </Label.GestureRecognizers>                                                </Label>                                            </StackLayout>                                            <StackLayout Grid.Column="1" Orientation="Horizontal" HorizontalOptions="Center">                                                <Image Source="bate_papo.png"                                                 WidthRequest="24" Margin="0,0,2,0"                                                 HeightRequest="24"                                                 VerticalOptions="Center" >                                                    <Image.GestureRecognizers>                                                        <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />                                                    </Image.GestureRecognizers>                                                </Image>                                                <Label Text="{Binding qtd_comentarios}"                                                                  FontSize="14"                                                 VerticalOptions="Center"                                                 Margin="0,0,8,0" >                                                    <Label.GestureRecognizers>                                                        <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />                                                    </Label.GestureRecognizers>                                                </Label>                                            </StackLayout>                                            <StackLayout Grid.Column="2" Orientation="Horizontal" HorizontalOptions="End">                                                <Image Source="share.png"                                                 WidthRequest="24"                                                 HeightRequest="24"                                                 VerticalOptions="Center" >                                                    <Image.GestureRecognizers>                                                        <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped_4" />                                                    </Image.GestureRecognizers>                                                </Image>                                                <Label Text="compartilhar"                                                                  FontSize="14"                                                 VerticalOptions="Center"                                                 Margin="5,0,0,0" >                                                    <Label.GestureRecognizers>                                                        <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped_4" />                                                    </Label.GestureRecognizers>                                                </Label>                                            </StackLayout>                                        </Grid>                                    </StackLayout>                                </Frame>                            </ViewCell>                        </DataTemplate>                    </ListView.ItemTemplate>                </ListView>                            </StackLayout>        </ScrollView>    </Grid></ContentPage>